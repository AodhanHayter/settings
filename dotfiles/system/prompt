#!/usr/bin/env zsh

# Put prompt info on new line
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_RPROMPT_ON_NEWLINE=true

# Add new line after prompt print loop
POWERLEVEL9K_PROMPT_ADD_NEWLINE=true

# Customize prompt segments
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(docker_machine dir vcs )
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status virtualenv node_version root_indicator background_jobs history time)

# Customize segment colors
## dir
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="008"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="008"
POWERLEVEL9K_DIR_HOME_BACKGROUND="008"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="255"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="255"
POWERLEVEL9K_DIR_HOME_FOREGROUND="255"
## node_version
POWERLEVEL9K_NODE_VERSION_FOREGROUND="black"
POWERLEVEL9K_NODE_VERSION_VISUAL_IDENTIFIER_COLOR="black"
## vi_mode
POWERLEVEL9K_VI_MODE_NORMAL_FOREGROUND="black"
POWERLEVEL9K_VI_MODE_INSERT_FOREGROUND="black"
POWERLEVEL9K_VI_MODE_NORMAL_BACKGROUND="red"
POWERLEVEL9K_VI_MODE_INSERT_BACKGROUND="green"

