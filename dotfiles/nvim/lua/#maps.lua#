Slocal map = vim.api.nvim_set_keymap

-- leader maps
----------------
map('n', '<Space>', '', {})
vim.g.mapleader = ' '

options = { noremap = true }
map('n', '<leader>S', ':source $HOME/.config/nvim/init.lua<CR>', options)
map('n', '<leader>co', ':set cursorcolumn!<CR>', options)

map('v', '<', '<gv', options)
map('v', '>', '>gv', options)

-- file tree
map('n', '<leader>ff', ':NvimTreeFindFile<CR>', options)
map('n', '<C-\\>', ':NvimTreeToggle<CR>', options)



